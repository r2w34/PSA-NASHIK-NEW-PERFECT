{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["../shared/*"]
    }
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["node_modules", "../dist"]
}